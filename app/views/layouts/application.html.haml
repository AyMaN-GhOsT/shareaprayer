!!! 5
%html
	%head
		%title Share a Prayer
		=stylesheet_link_tag    "application"
		=javascript_include_tag "application"
		=csrf_meta_tags

	%body
		.container
			%section
				.row
					.span8#logo
						-# SOPA LOGO
						-# =link_to image_tag("logo_sopa.png"), "http://americancensorship.org/", :target => "_blank"
						=link_to image_tag("logo.png"), prayers_path
			=yield
		
		#fb-root
		:javascript
			(function(d, s, id) {
			  var js, fjs = d.getElementsByTagName(s)[0];
			  if (d.getElementById(id)) return;
			  js = d.createElement(s); js.id = id;
			  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=245221078839860";
			  fjs.parentNode.insertBefore(js, fjs);
			}(document, 'script', 'facebook-jssdk'));
			
		- if Rails.env == "production"
			:javascript
				var _gaq = _gaq || [];
				_gaq.push(['_setAccount', 'UA-25113938-1']);
				_gaq.push(['_setDomainName', 'shareaprayer.org']);
				_gaq.push(['_setAllowHash', 'false']);
				_gaq.push(['_trackPageview']);
				(function() {
				var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
				ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
				var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
				})();